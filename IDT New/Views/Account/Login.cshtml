@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>D-SCAN LOGIN</title>
    <style>
        body {
            margin: 0;
            padding: 0;
            font-family: 'Segoe UI', Arial, sans-serif;
            background: #fff;
        }

        .container {
            display: flex;
            height: 100vh;
        }

        .left-panel {
            width: 50%;
            background: linear-gradient(135deg, #fcc005 0%, #ecc204 60%, #fffde4 100%);
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            position: relative;
        }

        .left-logo {
            position: absolute;
            top: 40px;
            left: 50%;
            transform: translateX(-50%);
            width: 170px;
        }

        .diamond-img {
            width: 75%;
            max-width: 440px;
        }

        .right-panel {
            width: 50%;
            background: #fff;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .login-box {
            width: 100%;
            max-width: 420px;
            padding: 45px 35px;
            background: #fff;
            border-radius: 18px;
            box-shadow: 0 0 24px 0px #fae57c2b;
            text-align: center;
        }

        .login-logo-badge {
            width: 80px;
            margin-bottom: 15px;
        }

        .login-title {
            font-size: 1.7rem;
            font-weight: 700;
            letter-spacing: 1px;
            color: #222;
            margin-bottom: 8px;
        }

        .login-subtitle {
            color: #868686;
            font-size: 1.08rem;
            margin-bottom: 34px;
        }

        .input-field {
            width: 100%;
            font-size: 1.1rem;
            padding: 13px 14px;
            margin-bottom: 22px;
            border: 1.5px solid #ecc600;
            border-radius: 7px;
            background: #fafafb;
            transition: border 0.2s;
        }

            .input-field:focus {
                border: 2px solid #DDC000;
            }

        .login-btn {
            width: 100%;
            padding: 13px 0;
            background: linear-gradient(90deg, #fcc005 35%, #f7b800 100%);
            color: #222;
            font-weight: bold;
            font-size: 1.15rem;
            border: none;
            border-radius: 7px;
            box-shadow: 0 2px 14px #fff2a9;
            cursor: pointer;
            letter-spacing: 0.5px;
        }

            .login-btn:hover {
                background: linear-gradient(90deg, #f7b800 35%, #fcc005 100%);
                color: #222;
            }
        @@media (max-width: 900px) {
            .container

        {
            flex-direction: column;
        }

        .left-panel, .right-panel {
            width: 100%;
            min-height: 50vh;
        }

        .left-logo {
            left: 30%;
        }

        }
    </style>
</head>
<body>
    <div class="container">
        <!-- Left Side: Logo & Diamond -->
        <div class="left-panel">
            <img class="left-logo" src="~/images/idt-logo.png" alt="IDT Logo" />
            <img class="diamond-img" src="~/images/diamond.jpg" alt="Diamond" />
        </div>
        <!-- Right Side: Login Form -->
        <div class="right-panel">
            <div class="login-box">
                <img class="login-logo-badge" src="~/images/idt-logo.png" alt="IDT Stamp" />
                <div class="login-title">D-SCAN LOGIN</div>
                <div class="login-subtitle">
                    Welcome back! Please enter your details
                </div>
                <form method="post" asp-action="Login">
                    <input class="input-field" type="text" name="UserID" placeholder="UserID:" required />
                    <input class="input-field" type="password" name="Password" placeholder="Password:" required />
                    <button type="submit" class="login-btn">Log In</button>
                </form>
            </div>
        </div>
    </div>
</body>
</html>
