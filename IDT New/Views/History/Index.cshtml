<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>History | IDT</title>
    <link rel="stylesheet" href="history.css">
    <style>
        html, body {
            height: 100%;
            margin: 0;
            font-family: 'Segoe UI', Arial, sans-serif;
            background: #fff;
        }

        body {
            min-height: 100vh;
            display: flex;
            flex-direction: column;
        }

        .idt-header {
            width: 100%;
            height: 60px;
            display: flex;
            align-items: center;
            position: relative;
            padding: 0 24px;
            border-bottom: 1px solid #ede9d2;
            background: #fff;
            box-sizing: border-box;
        }

        .header-left-content {
            display: flex;
            align-items: center;
            gap: 20px;
        }

        .header-title {
            position: absolute;
            left: 50%;
            transform: translateX(-50%);
            font-size: 2.2rem;
            font-weight: bold;
            letter-spacing: 2px;
            color: #222;
            white-space: nowrap;
            pointer-events: none;
        }

        .header-right-buttons {
            display: flex;
            align-items: center;
            gap: 12px;
            margin-left: auto;
        }

        .header-icon-btn {
            border: none;
            background-color: transparent;
            outline: none;
        }

        /* Sidebar Styles */
        .sidebar {
            width: 300px;
            padding: 20px;
            border-right: 1px solid #ede9d2;
            display: flex;
            flex-direction: column;
        }

        .sidebar-box {
            background: #fffbe6;
            border: 1.5px solid #f3e29c;
            border-radius: 18px;
            padding: 20px 18px;
            display: flex;
            flex-direction: column;
            gap: 18px;
            align-items: center;
        }

        .idt-logo {
            width: 72px;
            margin-bottom: 10px;
            border-radius: 50%;
        }

        .number-section {
            width: 100%;
            display: flex;
            flex-direction: column;
            gap: 6px;
        }

        .number-control {
            display: flex;
            align-items: center;
            gap: 8px;
            margin-top: 2px;
        }

            .number-control button {
                width: 32px;
                height: 32px;
                font-size: 20px;
                border-radius: 7px;
                border: 1.2px solid #e5d179;
                background: #fffde6;
                cursor: pointer;
            }

            .number-control input {
                width: 48px;
                text-align: center;
                font-weight: bold;
                border: 1.2px solid #e5d179;
                border-radius: 6px;
                background-color: #fff;
                pointer-events: none;
            }

        .controls {
            display: flex;
            flex-direction: column;
            width: 100%;
            align-items: center;
            gap: 6px;
        }

            .controls button {
                width: 90%;
                padding: 7px 0;
                border-radius: 7px;
                border: 1.2px solid #e5d179;
                background: #ffe9a6;
                font-weight: 500;
                cursor: pointer;
            }

        .storage {
            font-size: 0.93em;
            color: #bd9300;
            background: #fffde6;
            border-radius: 5px;
            padding: 5px 0;
            width: 90%;
            text-align: center;
            border: 1px solid #efd272;
        }

        label {
            font-weight: 600;
            color: #7c6b2d;
            width: 100%;
            text-align: left;
        }

        /* Middle Table Styles */
        .history-grid {
            flex: 1;
            padding: 20px;
        }

        .history-table {
            width: 100%;
            border-collapse: collapse;
            background: #fffbe6;
            border: 1.5px solid #f3e29c;
            border-radius: 8px;
            overflow: hidden;
            font-size: 0.95rem;
        }

            .history-table th,
            .history-table td {
                padding: 10px 12px;
                border-bottom: 1px solid #f3e29c;
                text-align: left;
            }

            .history-table th {
                background-color: #ffe589;
                font-weight: bold;
                color: #5c4a07;
            }

            .history-table tbody tr:nth-child(even) {
                background-color: #fff8d9;
            }

        /* Right Panel Styles */
        .rightbar {
            width: 300px;
            padding: 20px;
            border-left: 1px solid #ede9d2;
            background: #fffbe6;
            display: flex;
            justify-content: center;
            align-items: center;
        }

        .captured-image-box {
            width: 100%;
            height: 100%;
            max-height: 400px;
            border: 1.5px solid #f3e29c;
            border-radius: 18px;
            overflow: hidden;
            background-color: #fff;
            display: flex;
            justify-content: center;
            align-items: center;
        }

            .captured-image-box img {
                max-width: 100%;
                max-height: 100%;
                object-fit: contain;
                display: block;
            }

        /* Footer */
        .idt-footer-container {
            position: fixed;
            bottom: 0;
            left: 0;
            right: 0;
            background: #fdeec2;
            border-top: 1.5px solid #f0db26;
            box-shadow: 0 -2px 16px rgba(240,219,38,0.2);
            display: flex;
            flex-direction: column;
            align-items: center;
            font-size: 1rem;
        }

        .idt-footer-menu {
            display: flex;
            justify-content: center;
            padding: 6px 0;
        }

        .idt-footer-container button {
            background: transparent;
            border: none;
            padding: 10px 12px;
            margin: 0 4px;
            border-radius: 8px;
            font-weight: 600;
            cursor: pointer;
        }

            .idt-footer-container button:hover {
                background: #f8d863;
            }

        .idt-footer-info {
            background: #f4cb00;
            padding: 10px 20px;
            width: 100%;
            display: flex;
            justify-content: space-between;
            color: #3b3a33;
            font-weight: 700;
        }

        .footer-separator {
            width: 1px;
            height: 24px;
            background: #aaa247;
            margin: 0 15px;
        }

        .header-extra {
            display: flex;
            align-items: center;
            gap: 5px;
            font-size: 1.07rem;
            font-weight: 700;
        }

            .header-extra img {
                height: 150px;
                width: 200px;
            }
    </style>
</head>
<body>
    <div class="header">
        <div class="idt-header">
            <div class="header-left-content">
                <div class="header-extra">
                    <img src="~/images/IDT only logo.png" alt="SYD Logo" style="height:100px; vertical-align:middle;" />
                    <span><strong>SYD-100</strong></span>
                </div>
            </div>
            <div class="header-title">HISTORY</div>
            <div class="header-right-buttons">
                <button type="button" class="header-icon-btn" title="Help" onclick="onHeadsetClick()">
                    <img src="images/headset.png" alt="Headset" width="32" height="32" />
                </button>
                <button type="button" class="header-icon-btn" title="Back" onclick="onArrowClick()">
                    <img src="images/arrow.png" alt="Arrow" width="32" height="32" />
                </button>             
                <button type="button" class="header-icon-btn" title="Power"><img src="images/power.png" width="32" height="32"></button>
            </div>
        </div>
    </div>

    <div style="display:flex; flex:1;">
        <!-- Sidebar -->
        <aside class="sidebar">
            <div class="sidebar-box">
                <img src="~/images/IDT half logo.png" alt="IDT Logo" class="idt-logo" />

                <div class="number-section">
                    <label>HPHT:<input type="text" id="hphtValue" value="0" readonly /></label>
                </div>

                <div class="number-section">
                    <label>CVD:<input type="text" id="cvdValue" value="0" readonly /></label>
                </div>

                <label>Manual: <input type="text"></label>

                <div class="controls">
                    <button>Transfer</button>
                    <button>Delete</button>
                    <div class="storage">0%<br>Storage 256G</div>
                </div>
            </div>
        </aside>

        <!-- Middle Table -->
        <section class="history-grid">
            <table class="history-table">
                <thead>
                    <tr>
                        <th>Sr. No.</th>
                        <th>Lot No.</th>
                        <th>ID</th>
                        <th>Size</th>
                        <th>Remarks</th>
                    </tr>
                </thead>
                <tbody id="historyData">
                    <!-- Rows will be inserted here -->
                </tbody>
            </table>
        </section>


        <!-- Right Panel for Captured Image -->
        <aside class="rightbar">
            <div class="captured-image-box">
                <img id="capturedImage" src="images/placeholder.png" alt="Captured Image">
            </div>
        </aside>
    </div>

    <!-- Footer -->
    <footer class="idt-footer-container">
        <div class="idt-footer-menu">
            <button><img src="~/images/scan.png" width="32" height="32"> Scan</button>
            <button><img src="~/images/home.png" width="32" height="32"> Home</button>
            <button><img src="~/images/compare.png" width="32" height="32"> Compare</button>
            <button><img src="~/images/result.png" width="32" height="32"> Result</button>
            <button><img src="~/images/history.png" width="32" height="32"> History</button>
            <button><img src="~/images/certificate.png" width="32" height="32"> Certificate</button>
        </div>
        <div class="idt-footer-info">
            <div class="footer-left">IDT Gemological Laboratories Worldwide</div>
            <div class="footer-separator"></div>
            <div class="footer-right">www.idtworldwide.com</div>
        </div>
    </footer>

    <script>
                document.addEventListener("DOMContentLoaded", function () {
            // Example static data array (replace with localStorage or backend data)
            const data = [
                { lotNo: 'Lot-001', id: 'A123', size: 'Medium', remarks: 'OK' },
                { lotNo: 'Lot-002', id: 'B456', size: 'Large', remarks: 'Pending' }
            ];

            const tbody = document.getElementById('historyData');
            tbody.innerHTML = ''; // Clear old rows if needed

            data.forEach((item, index) => {
                const row = document.createElement('tr');
                row.innerHTML = `
                    <td>${index + 1}</td>  <!-- Sr. No. -->
                    <td>${item.lotNo}</td>
                    <td>${item.id}</td>
                    <td>${item.size}</td>
                    <td>${item.remarks}</td>
                `;
                tbody.appendChild(row);
            });

            // Example: set captured image for the right bar
            const imageUrl = localStorage.getItem('capturedImageUrl') || 'images/placeholder.png';
            document.getElementById('capturedImage').src = imageUrl;
        });

    </script>
    <script>
        function onHeadsetClick() {
            window.location.href = '/Help'; // For MVC route
        }
                function onArrowClick() {
            window.history.back(); // go back to the previous page in browser history
        }

    </script>
</body>
</html>
