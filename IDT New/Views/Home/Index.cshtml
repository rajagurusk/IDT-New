@{
    ViewData["Title"] = "Help";
    Layout = null; // Remove if you want to use your shared layout
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <title>@ViewData["Title"]</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <style>
        html, body {
            height: 100%;
            margin: 0;
            font-family: 'Segoe UI', Arial, sans-serif;
            background: #fff;
        }

        body {
            min-height: 100vh;
            display: flex;
            flex-direction: column;
        }

        .idt-header {
            width: 100%;
            height: 60px; /* adjust if needed */
            display: flex;
            align-items: center;
            position: relative; /* for absolute centering */
            padding: 0 24px;
            border-bottom: 1px solid #ede9d2;
            background: #fff;
            box-sizing: border-box;
        }

        .header-left-content {
            display: flex;
            align-items: center;
            gap: 20px;
        }

        .header-title {
            position: absolute;
            left: 50%;
            transform: translateX(-50%);
            font-size: 2.2rem;
            font-weight: bold;
            letter-spacing: 2px;
            color: #222;
            white-space: nowrap;
            pointer-events: none;
        }

        .header-right-buttons {
            display: flex;
            align-items: center;
            gap: 12px;
            margin-left: auto;
            background-color: transparent;
            border: none;
        }

        .header-icon-btn {
            border: none;
            background-color: transparent;
            outline: none;
            box-shadow: none;
        }

        .main-wrap {
            display: flex;
            flex-direction: row;
            flex-grow: 1;
            min-height: 0;
        }

        .left-form {
            background: #fffde7;
            border-right: 1px solid #fce9a1;
            min-width: 320px;
            max-width: 320px;
            padding: 40px 24px;
            box-sizing: border-box;
        }

        .idt-logo {
            width: 100px;
            display: block;
            margin: -10px auto 12px auto;
        }

        .form-label {
            color: #444;
            font-size: 1rem;
            margin: 10px 0 5px 3px;
        }

        .idt-input, .idt-remarks {
            width: 100%;
            max-width: 300px;
            padding: 9px 14px;
            margin-bottom: 15px;
            font-size: 1rem;
            border: 1px solid #eccf64;
            border-radius: 7px;
            background: #fafafb;
            box-sizing: border-box;
        }

        .idt-remarks {
            resize: vertical;
            min-height: 48px;
            max-height: 90px;
        }

        .autofocus-input {
            width: 50px;
            margin-left: 8px;
            margin-right: 8px;
            text-align: right;
        }

        .autofocus-wrap input[type="range"] {
            width: 140px;
        }

        /* Middle panel styling (video) */
        .middle-panel {
            width: 71%;
            border: 2px solid #f7b913;
            margin: 0 10px;
            display: flex;
            justify-content: center;
            align-items: center;
            overflow: hidden;
            height: calc(100vh - 60px - 90px); /* Adjust for header/footer height */
            max-height: 725px;
        }

            .middle-panel video {
                width: 100%;
                height: 100%;
                object-fit: cover;
            }

        /* Right panel */
        .right-panel {
            flex: 0 0 400px;
            background-color: #fafefe;
            padding: 30px;
            border-left: 1px solid #f0e7b8;
            display: flex;
            flex-direction: column;
            justify-content: flex-start;
            align-items: center;
            box-sizing: border-box;
        }

        /* Diamond chart box */
        .diamond-chart-header {
            display: flex;
            align-items: center;
            gap: 8px; /* spacing between title and button */
            margin-bottom: 17px;
        }

        .diamond-helper-btn img {
            display: block;
        }

        .diamond-chart-box {
            margin-top: 10px;
            width: 100%;
            background: #f9f9ef;
            border: 1.5px solid #facd02;
            border-radius: 13px;
            padding: 28px 24px 16px 24px;
            box-shadow: 0 2px 8px rgba(252,197,2,0.2);
        }

        /* .diamond-chart-title {
                    background: #faeeb8;
                    color: #6a6237;
                    font-weight: bold;
                    font-size: 1.26rem;
                    text-align: center;
                    border-radius: 8px;
                    padding: 5px 0 7px 0;
                    /* remove margin-bottom as it's now on .diamond-chart-header */
        /* } */ */
        .diamond-chart-title {
            background: #faeeb8;
            color: #6a6237;
            font-size: 1.26rem;
            font-weight: 700;
            border-radius: 8px;
            padding: 5px 0 7px 0;
            margin-bottom: 17px;
            text-align: center;
            gap: 8px; /* Space between title and button */
        }

        .diamond-chart-row {
            display: flex;
            align-items: center;
            justify-content: flex-start;
            gap: 14px;
            margin-bottom: 13px;
        }

        .diamond-chart-label {
            width: 42px;
            font-weight: 600;
            color: #8a8063;
            font-size: 1.1rem;
        }

        .chart-btn {
            width: 32px;
            height: 29px;
            font-size: 1.3rem;
            font-weight: 700;
            background: #f5b704;
            border: none;
            border-radius: 7px;
            color: #444;
            cursor: pointer;
            user-select: none;
            margin: 0 4px;
            transition: background 0.15s;
        }

            .chart-btn:hover {
                background: #f8d875;
            }

            .chart-btn:disabled {
                opacity: 0.5;
                cursor: default;
            }

            .chart-btn:focus {
                outline: none;
            }

        .chart-value {
            width: 24px;
            font-weight: 700;
            font-size: 1.1rem;
            color: #333;
            text-align: center;
            user-select: none;
            display: inline-block;
        }

        /* Footer styles */
        .idt-footer-container {
            position: fixed;
            bottom: 0;
            left: 0;
            right: 0;
            background: #fdeec2;
            border-top: 1.5px solid #f0db26;
            box-shadow: 0 -2px 16px rgba(240,219,38,0.2);
            user-select: none;
            display: flex;
            flex-direction: column;
            align-items: center;
            z-index: 1000;
            font-size: 1rem;
        }

            .idt-footer-container * {
                user-select: none;
            }

            .idt-footer-container a,
            .idt-footer-container button {
                cursor: pointer;
                background: transparent;
                border: none;
                padding: 10px 12px;
                margin: 0 4px;
                border-radius: 8px;
                transition: background-color 0.25s ease;
                font-weight: 600;
                color: #222;
                font-size: 1rem;
            }

                .idt-footer-container a:hover,
                .idt-footer-container button:hover {
                    background: #f8d863;
                    color: #333;
                }

        .idt-footer-menu {
            display: flex;
            justify-content: center;
            align-items: center;
            width: 100%;
            padding: 6px 0;
        }

        .footer-separator {
            width: 1px;
            height: 24px;
            background: #aaa247;
            margin: 0 15px;
        }

        .idt-footer-info {
            background: #f4cb00;
            padding: 10px 20px;
            width: 100%;
            display: flex;
            justify-content: space-between;
            align-items: center;
            color: #3b3a33;
            font-weight: 700;
        }

        .footer-left, .footer-right {
            white-space: nowrap;
        }

        /* Responsive adjustments */
        @@media (max-width: 880px) {
            .main-wrap {
                flex-direction: column;
            }

            .left-form,
            .right-panel {
                max-width: 100%;
                min-width: auto;
                padding: 20px;
                border: none;
            }

            .middle-panel {
                width: 100% !important;
                max-height: 400px;
                margin: 15px 0;
            }
        }

        @@media (max-width: 700px) {
            .diamond-chart-row {
                gap: 8px;
            }

            .diamond-chart-label {
                width: 35px;
                font-size: 0.95rem;
            }

            .chart-btn {
                width: 28px;
                height: 28px;
                font-size: 1rem;
            }

            .chart-value {
                width: 20px;
                font-size: 0.9rem;
            }

            .header-extra {
                display: flex;
                align-items: center; /* Vertical centering */
                gap: 5px; /* Space between image and text */
                font-size: 1.07rem; /* Optional: control text size */
                font-weight: 700;
            }

                .header-extra img {
                    display: block;
                    height: 150px;
                    width: 200px; /* desired width */
                }
        }
    </style>
</head>
<body>
    <div class="idt-header">
        <div class="header-left-content">
            <div class="header-icons"></div>
            <div class="header-extra">
                <img src="~/images/IDT only logo.png" alt="SYD Logo" style="height:100px; vertical-align:middle; margin-right:0px;" />
                <span><strong>SYD-100</strong></span>
            </div>
        </div>
        <div class="header-title">HOME</div>
        <div class="header-right-buttons">
            <button type="button" class="header-icon-btn" title="Help" onclick="onHeadsetClick()">
                <img src="images/headset.png" alt="Headset" width="32" height="32" />
            </button>
            <button type="button" class="header-icon-btn" title="Back" onclick="onArrowClick()">
                <img src="images/arrow.png" alt="Arrow" width="32" height="32" />
            </button>
            <button type="button" class="header-icon-btn" title="Power" onclick="onPowerClick()">
                <img src="images/power.png" alt="Power" width="32" height="32" />
            </button>
        </div>
    </div>

    <div class="main-wrap">
        <div class="left-form">
            <img class="idt-logo" src="~/images/IDT half logo.png" alt="IDT Logo" />
            <div class="form-label">Lot No:</div>
            <input class="idt-input" type="text" name="LotNo" />
            <div class="form-label">ID:</div>
            <input class="idt-input" type="text" name="ID" />
            <div class="form-label">Size:</div>
            <input class="idt-input" type="text" name="Size" />
            <div class="form-label">Remarks:</div>
            <textarea class="idt-remarks" name="Remarks"></textarea>
            <div class="autofocus-wrap">
                <input type="range" min="0" max="100" step="1" />
                <input class="autofocus-input" type="text" value="000" />
                <button class="autofocus-btn">Auto Focus</button>
            </div>
        </div>

        <div class="middle-panel">
            <video id="video" autoplay playsinline muted></video>
        </div>

        <div class="right-panel">
            <div class="diamond-chart-header">
                <div class="diamond-chart-title"><strong>Diamond Chart</strong></div>
                <button class="diamond-helper-btn" onclick="showDiamondHelp()" title="Show Diamond Chart Info" style="background:none;border:none;cursor:pointer;">
                    <img src="images/pop up icon.png" alt="Info" width="20" height="16" style="vertical-align:middle;" />
                </button>
            </div>


            <div class="diamond-chart-row">
                <span class="diamond-chart-label">LW:</span>
                <button class="chart-btn" onclick="updateChart('LW', -1)">-</button>
                <span id="lwVal" class="chart-value">0</span>
                <button class="chart-btn" onclick="updateChart('LW', 1)">+</button>
            </div>
            <div class="diamond-chart-row">
                <span class="diamond-chart-label">SW:</span>
                <button class="chart-btn" onclick="updateChart('SW', -1)">-</button>
                <span id="swVal" class="chart-value">0</span>
                <button class="chart-btn" onclick="updateChart('SW', 1)">+</button>
            </div>
            <div class="diamond-chart-row">
                <span class="diamond-chart-label">PH:</span>
                <button class="chart-btn" onclick="updateChart('PH', -1)">-</button>
                <span id="phVal" class="chart-value">0</span>
                <button class="chart-btn" onclick="updateChart('PH', 1)">+</button>
            </div>
        </div>
    </div>
    </div>

    <footer class="idt-footer-container">
        <div class="idt-footer-menu">
            <button class="menu-btn" id="scanBtn" type="button" title="Scan">
                <span class="menu-icon"><img src="~/images/scan.png" alt="Scan" width="32" height="32" /></span> Scan
            </button>
            <button class="menu-btn" type="button">
                <span class="menu-icon"><img src="~/images/home.png" alt="Home" width="32" height="32" /></span> Home
            </button>
            <button class="menu-btn" type="button">
                <span class="menu-icon"><img src="~/images/compare.png" alt="Compare" width="32" height="32" /></span> Compare
            </button>
            <!-- Button -->
            <button id="resultBtn" class="menu-btn" type="button">
                <span class="menu-icon">
                    <img src="images/result.png" alt="Result" width="32" height="32" />
                </span>
                Result
            </button>


            <button id="historyBtn" class="menu-btn" type="button">
                <span class="menu-icon"><img src="~/images/history.png" alt="History" width="32" height="32" /></span> History
            </button>

            <button id="certificateBtn" class="menu-btn" type="button">
                <span class="menu-icon">
                    <img src="images/certificate.png" alt="Certificate" width="32" height="32" />
                </span>
                Certificate
            </button>
        </div>
        <div class="idt-footer-info">
            <div class="footer-left">IDT Gemological Laboratories Worldwide</div>
            <div class="footer-separator"></div>
            <div class="footer-right">www.idtworldwide.com</div>
        </div>
    </footer>

    <script>
        // Overlay for scanning
        const scanningOverlay = document.createElement('div');
        scanningOverlay.id = "scanningOverlay";
        scanningOverlay.style.position = "fixed";
        scanningOverlay.style.top = "0";
        scanningOverlay.style.left = "0";
        scanningOverlay.style.width = "100%";
        scanningOverlay.style.height = "100%";
        scanningOverlay.style.background = "rgba(0,0,0,0.6)";
        scanningOverlay.style.display = "none";
        scanningOverlay.style.alignItems = "center";
        scanningOverlay.style.justifyContent = "center";
        scanningOverlay.style.color = "#fff";
        scanningOverlay.style.fontSize = "2rem";
        scanningOverlay.style.fontWeight = "bold";
        scanningOverlay.style.zIndex = "9999";
        scanningOverlay.innerText = "Scanning...";
        document.body.appendChild(scanningOverlay);

        function showScanningOverlay() { scanningOverlay.style.display = "flex"; }
        function hideScanningOverlay() { scanningOverlay.style.display = "none"; }

        navigator.mediaDevices.getUserMedia({ video: true })
        .then(function(stream) {
            document.getElementById('video').srcObject = stream;
        })
        .catch(function(err) {
            console.error("Error accessing camera: ", err);
        });

        function captureImageFromVideo(videoElement) {
            var canvas = document.createElement('canvas');
            canvas.width = videoElement.videoWidth;
            canvas.height = videoElement.videoHeight;
            var ctx = canvas.getContext('2d');
            ctx.drawImage(videoElement, 0, 0, canvas.width, canvas.height);
            return canvas.toDataURL('image/png');
        }

        async function captureImagesAndSend() {
            showScanningOverlay();
            let video = document.getElementById('video');
            let images = [];
            for (let i = 0; i < 6; i++) {
                images.push(captureImageFromVideo(video));
                await new Promise(r => setTimeout(r, 3000));
            }
            fetch('/Home/SaveCapturedImages', {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify(images)
            })
            .then(res => res.json())
            .then(data => {
                hideScanningOverlay();
                if(data.success) {
                    window.location.href = '/Compare';
                } else {
                    alert('Failed to save images: ' + (data.message || 'Unknown'));
                }
            })
            .catch(err => {
                hideScanningOverlay();
                console.error(err);
            });
        }

        document.getElementById('scanBtn').addEventListener('click', e => {
            e.preventDefault();
            captureImagesAndSend();
        });

        // Diamond chart handlers
        let chartValues = { LW: 0, SW: 0, PH: 0 };
        function updateChart(type, delta) {
            const min = -4, max = 4;
            chartValues[type] += delta;
            if (chartValues[type] < min) chartValues[type] = min;
            if (chartValues[type] > max) chartValues[type] = max;
            document.getElementById(type.toLowerCase() + 'Val').innerText = chartValues[type];
        }
    </script>
    <script>
        function onHeadsetClick() {
            window.location.href = '/Help'; // For MVC route
        }
                function onArrowClick() {
            window.history.back(); // go back to the previous page in browser history
        }

    </script>
    <script>
        document.getElementById("historyBtn").addEventListener("click", function() {
            window.location.href = "/History"; // Or your MVC route like '/History/Index'
        });
    </script>
    <!-- Script -->
    <script>
        document.getElementById('resultBtn').addEventListener('click', function() {
            window.location.href = '/Result';
        });
                document.getElementById('certificateBtn').addEventListener('click', function() {
            window.location.href = '/Certificate';
        });
    </script>
</body>
</html>