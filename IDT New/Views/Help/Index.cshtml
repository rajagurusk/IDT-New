@{
    ViewData["Title"] = "Help";
    Layout = null; // Use your layout if you want consistent header/footer
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <title>Help</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <style>
        html, body {
            height: 100%;
            margin: 0;
            font-family: 'Segoe UI', Arial, sans-serif;
            background: #fff;
        }

        body {
            min-height: 100vh;
            display: flex;
            flex-direction: column;
        }

        .idt-header {
            width: 100%;
            height: 60px; /* adjust if needed */
            display: flex;
            align-items: center;
            position: relative; /* for absolute centering */
            padding: 0 24px;
            border-bottom: 1px solid #ede9d2;
            background: #fff;
            box-sizing: border-box;
        }

        .header-left-content {
            display: flex;
            align-items: center;
            gap: 20px;
        }

        .header-title {
            position: absolute;
            left: 50%;
            transform: translateX(-50%);
            font-size: 2.2rem;
            font-weight: bold;
            letter-spacing: 2px;
            color: #222;
            white-space: nowrap;
            pointer-events: none;
        }

        .header-right-buttons {
            display: flex;
            align-items: center;
            gap: 12px;
            margin-left: auto;
            background-color: transparent;
            border: none;
        }

        .header-icon-btn {
            border: none;
            background-color: transparent;
            outline: none;
            box-shadow: none;
        }

        .main-wrap {
            display: flex;
            flex-direction: row;
            flex-grow: 1;
            min-height: 0;
        }
        /* body {
                    background: #fff;
                    margin: 0;
                    font-family: 'Segoe UI', Arial, sans-serif;
                } */
        .help-container {
            max-width: 700px; /* increased width */
            min-height: 500px; /* ensures a taller box - adjust as needed */
            margin: 30px auto;
            padding: 40px 40px 24px 40px; /* generous padding */
            background: #fffde7;
            border: 2px solid #ffe684;
            border-radius: 18px;
            box-shadow: 0 2px 20px #f8eaac70;
        }


        .help-logo {
            width: 200px; /* increased from 105px */
            display: block;
            margin: 0 auto 26px auto;
        }


        .help-btn-row {
            display: flex;
            justify-content: center; /* or space-evenly */
            align-items: center;
            gap: 20px;
            margin-bottom: 25px;
            flex-wrap: wrap;
        }

        .help-btn-col {
            display: contents; /* or remove this wrapper entirely */
        }

        /* .help-btn-col {
                    display: flex;
                    flex-direction: column;
                    gap: 19px;
                    flex: 1;
                } */
        .help-btn {
            display: flex;
            flex-direction: column;
            align-items: center;
            background: #ffffff;
            border: 1.5px solid #ecc204;
            border-radius: 13px;
            padding: 19px;
            font-size: 1.07rem;
            font-weight: 600;
            color: #6a6237;
            text-align: center;
            cursor: pointer;
            transition: background 0.13s, box-shadow 0.18s;
            box-shadow: 0 2px 7px #fcc00518;
            min-width: 117px;
        }

            .help-btn:hover {
                background: #faeeb8;
                color: #5d4e1f;
            }

            .help-btn img {
                width: 34px;
                height: 34px;
                margin-bottom: 11px;
            }

        .help-contact {
            margin-top: 34px;
            background: #fff;
            border: 1px solid #f8dd90;
            border-radius: 12px;
            padding: 17px 14px 10px 14px;
            text-align: center;
            color: #886d1a;
            font-size: 1.07rem;
            font-weight: 500;
        }

            .help-contact a, .help-contact span {
                color: #8b7c3e;
                text-decoration: none;
                font-weight: 600;
            }

        /* Footer styles */
        .idt-footer-container {
            position: fixed;
            bottom: 0;
            left: 0;
            right: 0;
            background: #fdeec2;
            border-top: 1.5px solid #f0db26;
            box-shadow: 0 -2px 16px rgba(240,219,38,0.2);
            user-select: none;
            display: flex;
            flex-direction: column;
            align-items: center;
            z-index: 1000;
            font-size: 1rem;
        }

            .idt-footer-container * {
                user-select: none;
            }

            .idt-footer-container a,
            .idt-footer-container button {
                cursor: pointer;
                background: transparent;
                border: none;
                padding: 10px 12px;
                margin: 0 4px;
                border-radius: 8px;
                transition: background-color 0.25s ease;
                font-weight: 600;
                color: #222;
                font-size: 1rem;
            }

                .idt-footer-container a:hover,
                .idt-footer-container button:hover {
                    background: #f8d863;
                    color: #333;
                }

        .idt-footer-menu {
            display: flex;
            justify-content: center;
            align-items: center;
            width: 100%;
            padding: 6px 0;
        }

        .footer-separator {
            width: 1px;
            height: 24px;
            background: #aaa247;
            margin: 0 15px;
        }

        .idt-footer-info {
            background: #f4cb00;
            padding: 10px 20px;
            width: 100%;
            display: flex;
            justify-content: space-between;
            align-items: center;
            color: #3b3a33;
            font-weight: 700;
        }

        .footer-left, .footer-right {
            white-space: nowrap;
        }

        @@media (max-width: 600px) {
            .help-container {
                padding: 13px 5px;
            }

            .help-btn-row {
                flex-direction: column;
                gap: 19px;
            }

            .help-btn-col {
                flex-direction: row;
                gap: 10px;
            }

            .header-extra {
                display: flex;
                align-items: center; /* Vertical centering */
                gap: 5px; /* Space between image and text */
                font-size: 1.07rem; /* Optional: control text size */
                font-weight: 700;
            }

                .header-extra img {
                    display: block;
                    height: 150px;
                    width: 100px; /* desired width */
                }
        }
    </style>
</head>
<body>
    <div class="idt-header">
        <div class="header-left-content">
            <div class="header-icons"></div>
            <div class="header-extra">
                <img src="~/images/IDT only logo.png" alt="SYD Logo" style="height:80px; vertical-align:middle; margin-right:0px;" />
                <span><strong>SYD-100</strong></span>
            </div>
        </div>
        <div class="header-title">HELP</div>
        <div class="header-right-buttons">
            <button type="button" class="header-icon-btn" title="Help" onclick="onHeadsetClick()">
                <img src="~/images/headset.png" alt="Headset" width="32" height="32" />
            </button>
            <button type="button" class="header-icon-btn" title="Back" onclick="onArrowClick()">
                <img src="~/images/arrow.png" alt="Arrow" width="32" height="32" />
            </button>
            <button type="button" class="header-icon-btn" title="Power" onclick="onPowerClick()">
                <img src="~/images/power.png" alt="Power" width="32" height="32" />
            </button>
        </div>
    </div>

    <div class="help-container">
        <img src="~/images/idt-logo.png" alt="IDT Logo" class="help-logo" />
        <div class="help-btn-row">
            <div class="help-btn-col">
                <button class="help-btn" onclick="window.location.href='/UserManual'">
                    <img src="~/images/manual.png" alt="User Manual" />
                    User Manual
                </button>
                <button class="help-btn" onclick="window.location.href='/SelfTest'">
                    <img src="~/images/assessment.png" alt="Self Test" />
                    Self Test
                </button>
            </div>
            <div class="help-btn-col">
                <button class="help-btn" onclick="window.location.href='/Settings'">
                    <img src="~/images/setting.png" alt="Settings" />
                    Settings
                </button>

                <button class="help-btn" onclick="window.location.href='/TeamViewer'">
                    <img src="~/images/team-viewer.png" alt="Team Viewer" />
                    Team Viewer
                </button>
            </div>
        </div>
        <div class="help-contact">
            <div>
                <span>Contact Us:</span><br>
                <a href="mailto:info@idtworldwide.com">info@idtworldwide.com</a> <br>
                <a href="https://www.idtworldwide.com" target="_blank">www.idtworldwide.com</a> <br>
                <span>Phone: +91 98771 99999</span>
            </div>
        </div>
    </div>
    <footer class="idt-footer-container">
        @* <div class="idt-footer-menu">
            <button class="menu-btn" id="scanBtn" type="button" title="Scan">
                <span class="menu-icon"><img src="~/images/scan.png" alt="Scan" width="32" height="32" /></span> Scan
            </button>
            <button class="menu-btn" type="button">
                <span class="menu-icon"><img src="~/images/home.png" alt="Home" width="32" height="32" /></span> Home
            </button>
            <button class="menu-btn" type="button">
                <span class="menu-icon"><img src="~/images/compare.png" alt="Compare" width="32" height="32" /></span> Compare
            </button>
            <button class="menu-btn" type="button">
                <span class="menu-icon"><img src="~/images/result.png" alt="Result" width="32" height="32" /></span> Result
            </button>
            <button class="menu-btn" type="button">
                <span class="menu-icon"><img src="~/images/history.png" alt="History" width="32" height="32" /></span> History
            </button>
            <button class="menu-btn" type="button">
                <span class="menu-icon"><img src="~/images/certificate.png" alt="Certificate" width="32" height="32" /></span> Certificate
            </button>
        </div> *@
        <div class="idt-footer-info">
            <div class="footer-left">IDT Gemological Laboratories Worldwide</div>
            <div class="footer-separator"></div>
            <div class="footer-right">www.idtworldwide.com</div>
        </div>
    </footer>
</body>
</html>
<script>
    function onHeadsetClick() {
        window.location.href = '/Help'; // For MVC route
    }
            function onArrowClick() {
        window.history.back(); // go back to the previous page in browser history
    }

</script>