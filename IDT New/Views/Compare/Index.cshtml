@{
    var images = ViewData["CapturedImages"] as List<string> ?? new List<string>();
    string[] labels = new[] { "Result", "Long Fluorescence", "Short Fluorescence", "Phosphorescence" };
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <title>@ViewData["Title"]</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
        <style>
            html, body {
                height: 100%;
                margin: 0;
                font-family: 'Segoe UI', Arial, sans-serif;
                background: #fff;
            }

            body {
                min-height: 100vh;
                display: flex;
                flex-direction: column;
            }

            .idt-header {
                width: 100%;
                height: 60px;
                display: flex;
                align-items: center;
                position: relative;
                padding: 0 24px;
                border-bottom: 1px solid #ede9d2;
                background: #fff;
                box-sizing: border-box;
            }

            .header-left-content {
                display: flex;
                align-items: center;
                gap: 20px;
            }

            .header-title {
                position: absolute;
                left: 50%;
                transform: translateX(-50%);
                font-size: 2.2rem;
                font-weight: bold;
                letter-spacing: 2px;
                color: #222;
                white-space: nowrap;
                pointer-events: none;
            }

            .header-right-buttons {
                display: flex;
                align-items: center;
                gap: 12px;
                margin-left: auto;
                background-color: transparent;
                border: none;
            }

            .header-icon-btn {
                border: none;
                background-color: transparent;
                outline: none;
                box-shadow: none;
            }

            .main-wrap {
                display: flex;
                flex-direction: row;
                flex-grow: 1;
                min-height: 0;
                justify-content: center; /* center the children */
                align-items: stretch;
            }

            /* Left compare panel */
            .compare-left-panel {
                background: #fffde7;
                border-right: 1px solid #fce58d;
                min-width: 270px;
                max-width: 290px;
                padding: 40px 24px 12px 24px;
                display: flex;
                flex-direction: column;
                align-items: flex-start;
            }

            .compare-logo {
                width: 120px;
                display: block;
                margin: 0 auto 36px auto;
            }

            .compare-label {
                font-size: 1.12rem;
                font-weight: 500;
                color: #6a6237;
                margin: 10px 0 5px 2px;
            }

            .compare-input {
                width: 92%;
                padding: 8px 14px;
                margin-bottom: 13px;
                font-size: 1rem;
                border: 1.5px solid #ecc204;
                border-radius: 7px;
                background: #fafafb;
                box-sizing: border-box;
            }

            .compare-row {
                display: flex;
                align-items: center;
                width: 100%;
                margin-bottom: 15px;
            }

            .compare-btn-group {
                display: flex;
                align-items: center;
                margin-bottom: 17px;
                width: 100%;
            }

                .compare-btn-group button {
                    width: 36px;
                    height: 32px;
                    font-size: 1.7rem;
                    border: none;
                    margin: 0 6px;
                    border-radius: 7px;
                    background: #fcc005;
                    cursor: pointer;
                }

                .compare-btn-group span {
                    font-size: 1.15rem;
                    flex: 1;
                    text-align: center;
                    margin: 0 6px;
                }

            .compare-action-btn {
                width: 90%;
                border: 1.5px solid #ecc204;
                border-radius: 7px;
                padding: 10px 0;
                background: #fff;
                font-weight: 600;
                color: #222;
                margin-bottom: 10px;
                cursor: pointer;
                font-size: 1.04rem;
                transition: background 0.13s;
            }

                .compare-action-btn:hover {
                    background: #faeeb8;
                }

            .compare-center-content {
                flex-grow: 1;
                display: flex;
                justify-content: center;
                align-items: center;
                height: 100%;
                padding: 0 18px;
            }

            .compare-page-grid {
                display: grid;
                grid-template-columns: repeat(2, 1fr);
                grid-template-rows: repeat(2, 1fr);
                gap: 16px; /* More space between cells */
                width: 800px; /* Adjusted for squareness */
                height: 700px;
                max-width: 60vw;
                max-height: 90vh;
                border: 2px solid #fac600;
                border-radius: 14px;
                background: #fcf9ed;
                box-sizing: border-box;
                margin-left: 10px;
            }

            .compare-grid-cell {
                position: relative;
                display: flex;
                align-items: center;
                justify-content: center;
                background: #000;
                border-radius: 12px;
                overflow: hidden;
                box-shadow: 0 2px 10px rgba(184, 163, 15, 0.08);
            }

                .compare-grid-cell img {
                    width: 96%;
                    height: 96%;
                    object-fit: cover;
                    border-radius: 10px;
                    box-shadow: 0 0 3px #000a;
                }

            .video-label {
                position: absolute;
                top: 10px;
                left: 12px;
                padding: 5px 16px;
                background: rgba(0, 0, 0, 0.6);
                color: #ffe46b;
                font-size: 1rem;
                font-weight: 500;
                border-radius: 5px;
                letter-spacing: 1px;
                user-select: none;
                pointer-events: none;
            }

            /* Right panel */
            .right-panel {
                flex: 0 0 300px; /* Fix width to 200px */
                background-color: #fafbfe;
                padding: 10px;
                border-left: 1px solid #f9e7aa;
                display: flex;
                flex-direction: column;
                justify-content: center;
                align-items: center;
                min-width: unset; /* Remove min-width if necessary */
                box-sizing: border-box; /* Include padding in width */
            }
        /* Diamond chart box */
        .diamond-chart-header {
            display: flex;
            align-items: center;
            gap: 8px; /* spacing between title and button */
            margin-bottom: 17px;
        }

        .diamond-helper-btn img {
            display: block;
        }

        .diamond-chart-box {
            margin-top: 1px;
            width: 100%;
            background: #f9f9ef;
            border: 1.5px solid #facd02;
            border-radius: 13px;
            padding: 28px 24px 16px 24px;
            box-shadow: 0 2px 8px rgba(252,197,2,0.2);
        }

        /* .diamond-chart-title {
                    background: #faeeb8;
                    color: #6a6237;
                    font-weight: bold;
                    font-size: 1.26rem;
                    text-align: center;
                    border-radius: 8px;
                    padding: 5px 0 7px 0;
                    /* remove margin-bottom as it's now on .diamond-chart-header */
        /* } */ */
        .diamond-chart-title {
            background: #faeeb8;
            color: #6a6237;
            font-size: 1.26rem;
            font-weight: 700;
            border-radius: 8px;
            padding: 5px 0 7px 0;
            margin-bottom: 17px;
            text-align: center;
            gap: 8px; /* Space between title and button */
        }

        .diamond-chart-row {
            display: flex;
            align-items: center;
            justify-content: flex-start;
            gap: 14px;
            margin-bottom: 13px;
        }

        .diamond-chart-label {
            width: 42px;
            font-weight: 600;
            color: #8a8063;
            font-size: 1.1rem;
        }

        .chart-btn {
            width: 32px;
            height: 29px;
            font-size: 1.3rem;
            font-weight: 700;
            background: #f5b704;
            border: none;
            border-radius: 7px;
            color: #444;
            cursor: pointer;
            user-select: none;
            margin: 0 4px;
            transition: background 0.15s;
        }

            .chart-btn:hover {
                background: #f8d875;
            }

            .chart-btn:disabled {
                opacity: 0.5;
                cursor: default;
            }

            .chart-btn:focus {
                outline: none;
            }

        .chart-value {
            width: 24px;
            font-weight: 700;
            font-size: 1.1rem;
            color: #333;
            text-align: center;
            user-select: none;
            display: inline-block;
        }


            .idt-footer-container {
                position: fixed;
                bottom: 0;
                left: 0;
                right: 0;
                background: #fffde4;
                border-top: 1.5px solid #faeeb8;
                box-shadow: 0 -2px 16px 0 #f1e27c33;
                user-select: none;
                display: flex;
                flex-direction: column;
                align-items: center;
                z-index: 1000;
            }

            .idt-footer-menu {
                display: flex;
                justify-content: center;
                align-items: center;
                padding: 0 0 6px 0;
                width: 100%;
            }

            .menu-btn {
                display: flex;
                flex-direction: column;
                align-items: center;
                background: none;
                border: none;
                margin: 0 6px;
                padding: 10px 10px 4px 10px;
                color: black;
                font-size: 1.01rem;
                font-weight: 600;
                cursor: pointer;
                transition: color 0.18s;
                border-radius: 10px;
            }

                .menu-btn:hover {
                    color: #333333;
                    background: #f0f0f0;
                }

            .menu-icon {
                font-size: 1.46rem;
                margin-bottom: 2px;
                display: block;
                color: black;
            }

            .idt-footer-info {
                width: 100%;
                background: #fcc005;
                display: flex;
                align-items: center;
                justify-content: space-between;
                padding: 8px 20px;
                box-sizing: border-box;
                user-select: none;
            }

            .footer-left,
            .footer-right {
                color: #222;
                font-weight: 600;
                font-size: 1.1rem;
                white-space: nowrap;
            }

            .footer-separator {
                width: 1px;
                height: 24px;
                background: #222;
                margin: 0 15px;
            }

        .header-extra {
            display: flex;
            align-items: center; /* Vertical centering */
            gap: 5px; /* Space between image and text */
            font-size: 1.07rem; /* Optional: control text size */
            font-weight: 700;
        }

            .header-extra img {
                display: block;
                height: 150px;
                width: 100px; /* desired width */
            }
        </style>

</head>
<body>
    <div class="idt-header">
        <div class="header-left-content">
            <div class="header-icons"></div>
            <div class="header-extra">
                <img src="~/images/IDT only logo.png" alt="SYD Logo" style="height:80px; vertical-align:middle; margin-right:0px;" />
                <span><strong>SYD-100</strong></span>
            </div>
        </div>
        <div class="header-title">COMPARE</div>
        <div class="header-right-buttons">
            <button type="button" class="header-icon-btn" title="Help" onclick="window.location.href='/Help'">
                <img src="images/headset.png" alt="Headset" width="32" height="32" />
            </button>

            <button type="button" class="header-icon-btn" title="Back" onclick="onArrowClick()">
                <img src="images/arrow.png" alt="Arrow" width="32" height="32" />
            </button>

            <button type="button" class="header-icon-btn" title="Power">
                <img src="images/power.png" alt="Power" width="32" height="32" />
            </button>
        </div>
    </div>

    <div class="main-wrap">
        <!-- Left compare controls -->
        <div class="compare-left-panel">
            <img class="compare-logo" src="~/images/IDT half logo.png" alt="IDT Logo" />
            <div class="compare-label">HPHT</div>
            <input class="compare-input" type="text" />
            <div class="compare-label">CVD</div>
            <input class="compare-input" type="text" />

            <div class="compare-btn-group">
                <button>-</button>
                <span>0</span>
                <button>+</button>
            </div>
            <button class="compare-action-btn">Super Image</button>
            <button class="compare-action-btn">Simulants</button>
        </div>

        <!-- Center comparison grid -->
        <div class="compare-center-content">
            <div class="compare-page-grid">
                @for (int i = 0; i < 4; i++)
                {
                    <div class="compare-grid-cell">
                        @if (images.Count > i)
                        {
                            <img src="@images[i]" alt="@labels[i]" />
                        }
                        else
                        {
                            <div style="color: white;">No Image</div>
                        }
                        <div class="video-label">@labels[i]</div>
                    </div>
                }
            </div>
        </div>
        <style>
            .middle-panel {
                width: 71%;
                border: 2px solid #f5c518;
                height: 725px;
                margin: 0 10px;
                display: flex;
                justify-content: center;
                align-items: center;
                overflow: hidden;
            }

                .middle-panel video {
                    width: 100%;
                    height: 100%;
                    object-fit: cover;
                }
        </style>

        <!-- Right panel -->
        <div class="right-panel">
            <div class="diamond-chart-header">
                <div class="diamond-chart-title"><strong>Diamond Chart</strong></div>
                <button class="diamond-helper-btn" onclick="showDiamondHelp()" title="Show Diamond Chart Info" style="background:none;border:none;cursor:pointer;">
                    <img src="images/pop up icon.png" alt="Info" width="20" height="16" style="vertical-align:middle;" />
                </button>
            </div>


            <div class="diamond-chart-row">
                <span class="diamond-chart-label">LW:</span>
                <button class="chart-btn" onclick="updateChart('LW', -1)">-</button>
                <span id="lwVal" class="chart-value">0</span>
                <button class="chart-btn" onclick="updateChart('LW', 1)">+</button>
            </div>
            <div class="diamond-chart-row">
                <span class="diamond-chart-label">SW:</span>
                <button class="chart-btn" onclick="updateChart('SW', -1)">-</button>
                <span id="swVal" class="chart-value">0</span>
                <button class="chart-btn" onclick="updateChart('SW', 1)">+</button>
            </div>
            <div class="diamond-chart-row">
                <span class="diamond-chart-label">PH:</span>
                <button class="chart-btn" onclick="updateChart('PH', -1)">-</button>
                <span id="phVal" class="chart-value">0</span>
                <button class="chart-btn" onclick="updateChart('PH', 1)">+</button>
            </div>
        </div>
    </div>
    </div>

    <footer class="idt-footer-container">
        <div class="idt-footer-menu">
            <a class="menu-btn" href="/Compare">
                <span class="menu-icon">
                    <img src="~/images/scan.png" alt="Scan" width="32" height="32" />
                </span>
                Scan
            </a>
            <a class="menu-btn" href="/Home">
                <span class="menu-icon">
                    <img src="~/images/home.png" alt="Home" width="32" height="32" />
                </span>
                Home
            </a>
            <a class="menu-btn" href="/Compare">
                <span class="menu-icon">
                    <img src="~/images/compare.png" alt="Compare" width="32" height="32" />
                </span>
                Compare
            </a>
            <a class="menu-btn" href="/Result">
                <span class="menu-icon">
                    <img src="~/images/result.png" alt="Result" width="32" height="32" />
                </span>
                Result
            </a>
            <button id="historyBtn" class="menu-btn" type="button">
                <span class="menu-icon"><img src="~/images/history.png" alt="History" width="32" height="32" /></span> History
            </button>
            <a class="menu-btn" href="/Certificate">
                <span class="menu-icon">
                    <img src="~/images/certificate.png" alt="Certificate" width="32" height="32" />
                </span>
                Certificate
            </a>
        </div>
        <div class="idt-footer-info">
            <div class="footer-left">IDT Gemological Laboratories Worldwide</div>
            <div class="footer-separator"></div>
            <div class="footer-right">www.idtworldwide.com</div>
        </div>
    </footer>
    <script>
        function onHeadsetClick() {
            window.location.href = '/Help'; // For MVC route
        }
                function onArrowClick() {
            window.history.back(); // go back to the previous page in browser history
        }

    </script>
    <script>
        document.getElementById("historyBtn").addEventListener("click", function() {
            window.location.href = "/History"; // Or your MVC route like '/History/Index'
        });
    </script>
</body>
</html>
